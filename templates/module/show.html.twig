{% extends 'base.html.twig' %}

{% block title %}Module
{% endblock %}

{% block body %}
	<div class="container d-flex  justify-content-center align-items-center border">
		<div class="container tabProf d-flex flex-column justify-content-center align-items-center border">

			<h1>Module</h1>

			<table class="table table-striped rounded-3 table-hover">

				<thead>
					<tr>
						<th>Id</th>
						<th>Nom</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>{{ module.id }}</td>
						<td>{{ module.nom }}</td>

					</tr>
				</tbody>
			</table>
		</div>
		<div class="container tabProf d-flex flex-column justify-content-center align-items-center border">
			<h1>Ses professeurs</h1>

			<table class=" table  table-dark table-striped rounded-3 table-hover">
				<thead>
					<tr>
						<th>N°</th>
						<th>Nom Complet</th>
						<th>Grade</th>
					</tr>
				</thead>

				<tbody>
					{% set i=0 %}
					{% for professeur in professeurs %}
						{% set i=i+1 %}
						<tr>
							<td>{{ i }}</td>
							<td>{{ professeur.nomComplet }}</td>
							<td>{{ professeur.grade }}</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">
								no records found
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>


	</div>
	<div class="d-flex justify-content-evenly">
		<a name="" id="" class="btn btn-secondary" href="{{ path('app_module_index') }}" role="button">retour au liste</a>
		<a name="" id="" class="btn btn-secondary" href="{{ path('app_module_edit', {'id': module.id}) }}" role="button">éditer</a>
		{{ include('module/_delete_form.html.twig') }}
	</div>

{% endblock %}
