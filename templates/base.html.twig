<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/daisyui@2.15.2/dist/full.css" rel="stylesheet" type="text/css"/>
		<link
		href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2/dist/tailwind.min.css" rel="stylesheet" type="text/css"/>


		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="p-3">


		<div class="wrapper d-flex align-items-stretch">
			<nav id="sidebar">
				<div class="custom-menu">
					<button type="button" id="sidebarCollapse" class="btn btn-primary"></button>
				</div>
				<div class="img bg-wrap text-center py-4" style="background-image: url({{ asset ('bootstrap/sidebar/images/bg_1.jpg') }});">
					<div class="user-logo">
						<div class="img" style="background-image: url({{ asset ('bootstrap/sidebar/images/logo.jpg') }});"></div>
						<h3>Catriona Henderson</h3>
					</div>
				</div>
				<ul class="list-unstyled components mb-5">
					<li class="active">
						<a href="#">
							<span class="fa fa-home mr-3"></span>
							Home</a>
					</li>
					{# {% if app.user.roles[0]=='ROLE_RP' %} #}

					<li>
						<a href="{{path ('app_inscription_new')}}">
							<span class="fa fa-download mr-3 notif">
								<small class="d-flex align-items-center justify-content-center">5</small>
							</span>
							Inscrire un étudiant</a>
					</li>
					{# {% endif %} #}
					{# {% if app.user.roles[0]=='ROLE_AC' %} #}

					<li>
						<a href="{{path ('app_etudiant_index')}}">
							<span class="fa fa-gift mr-3"></span>Les étudiants</a>
					</li>

					<li>
						<a href="{{path ('app_inscription_index')}}">
							<span class="fa fa-trophy mr-3"></span>
							les inscriptions</a>
					</li>
					{# {% endif %} #}

					{% if app.user.roles[0] !='ROLE_RP' %}
						<li>
							<a href="{{path ('app_demande_index')}}">
								<span class="fa fa-cog mr-3"></span>
								Les demandes</a>
						</li>
					{% endif %}

					<li>
						<a href="{{path ('app_demande_index')}}">
							<span class="fa fa-cog mr-3"></span>
							Les demandes</a>
					</li>
					<li>
						<a href="{{path ('app_professeur_index')}}">
							<span class="fa fa-support mr-3"></span>Les professeurs</a>
					</li>
					<li>
						<a href="{{path ('app_logout')}}">
							<span class="fa fa-sign-out mr-3"></span>
							Sign Out</a>
					</li>
				</ul>

			</nav>

			<!-- Page Content  -->
			<div id="content" class="p-4 p-md-5 pt-5 border"> {% block body %}{% endblock %}

				</div>
			</div>

			<script src="{{ asset ('bootstrap/sidebar/js/bootstrap.min.js') }}"></script>

		</body>
	</html>
