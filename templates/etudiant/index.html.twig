{% extends 'base.html.twig' %}

{% block title %}Etudiant index{% endblock %}

{% block body %}
    <h1>Etudiant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomComplet</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Matricule</th>
                <th>Sexe</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td>{{ etudiant.nomComplet }}</td>
                <td>{{ etudiant.email }}</td>
                <td>{{ etudiant.roles ? etudiant.roles|json_encode : '' }}</td>
                <td>{{ etudiant.password }}</td>
                <td>{{ etudiant.matricule }}</td>
                <td>{{ etudiant.sexe }}</td>
                <td>{{ etudiant.adresse }}</td>
                <td>
                    <a href="{{ path('app_etudiant_show', {'id': etudiant.id}) }}">show</a>
                    <a href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_etudiant_new') }}">Create new</a>
{% endblock %}
