{% extends 'base.html.twig' %}

{% block title %}Liste des professeurs
{% endblock %}

{% block body %}
	<div class="container d-flex flex-column justify-content-center align-items-center border">

		<h1>Liste des professeurs</h1>

		<table class="table table-dark table-striped rounded-3 table-hover">

			<thead>
				<tr>
					<th>NÂ°</th>
					<th>NomComplet</th>
					<th>Grade</th>
					<th class="text-center">actions</th>
				</tr>
			</thead>
			<tbody>
				{% set i=0 %}
				{% for professeur in professeurs %}
					{% set i=i+1 %}

					<tr>
						<td>{{i}}</td>
						<td>{{ professeur.nomComplet }}</td>
						<td>{{ professeur.grade }}</td>
						<td class="d-flex justify-content-evenly">
							<a name="" id="" class="btn btn-secondary" href="{{ path('app_professeur_show', {'id': professeur.id}) }}" role="button">
								detail
							</a>
							<a name="" id="" class="btn btn-secondary" href="{{ path('app_professeur_edit', {'id': professeur.id}) }}" role="button">
								edit
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a name="" id="" class="btn btn-secondary d-flex align-self-start" href="{{ path('app_professeur_new') }}" role="button">
			Add new professeur
		</a>
		<div class"d-flex justify-self-center">
			{{ knp_pagination_render(professeurs,'pagination.html.twig') }}
		</div>

	</div>

{% endblock %}
